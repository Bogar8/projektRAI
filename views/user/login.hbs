<div class="container">
    <h1>Prijava</h1>
    <form action="login" method="post">
      <div class="form-group" >
        <label for="username">Uporabniško ime</label>
        <input name="username" type="text" class="form-control" placeholder="Vnesite uporabniško ime">
      </div>
      <div class="form-group">
        <label for="password">Geslo</label>
        <input type="password" name="password" class="form-control" placeholder="Geslo">
      </div>
      <input type="submit" class="btn btn-primary" value="Prijava">
    </form>
    {{#if napaka}}
        <div class="login_alert alert alert-danger" role="alert">
          Napačno uporabniško ime ali geslo
        </div>
    {{/if}}
</div>