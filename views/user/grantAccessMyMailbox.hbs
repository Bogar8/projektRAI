<div class="container">

    <h2>Paketnik</h2>
    <hr>
    <p> <span  class="gray_text">Lastnik: </span>{{mailbox.owner_id.username}}<br>
        <span  class="gray_text">Koda : </span>{{mailbox.code}} <br>
        <span  class="gray_text">Lokacija: </span>{{mailbox.location}} <br>
        <span  class="gray_text">Nazadnje odklenjen: </span>{{mailbox.last_accessed_date}} <br>
        <span  class="gray_text">Zaklenjen: </span>{{#if mailbox.locked}}DA {{else}} NE{{/if}}</p>
</div>
<div class="container">
    <h2>Dodaj dostop</h2>
    <hr>
    <form action="/packageAccess/grantAccess" method="post">
        <div class="form-group" >
            <label for="username">Za uporabnika (uporabni≈°ko ime): </label>
            <input type="text" id="username" name="username" class="form-control">
        </div>
        <div class="form-group" >
            <label for="date_from">Od: </label>
            <input type="datetime-local" id="date_from" name="date_from" class="form-control">
        </div>
        <div class="form-group" >
            <label for="date_to">Do: </label>
            <input type="datetime-local" id="date_to" name="date_to" class="form-control">
        </div>
        <input type="text" id="mailbox_id" name="mailbox_id" value="{{mailbox._id}}" hidden>
        <input type="text" id="user_id" name="user_id" value="{{mailbox.owner_id}}" hidden>
        <div class="tp">
            <br>
            <input type="submit" class="btn btn-primary" value="Dodaj dostop">
        </div>
    </form>
    <hr>
</div>
<div class="container">
    <h2>Veljavni dostopi</h2>
    {{#each packageAccesses}}
        <p><span  class="gray_text">Dostopen uporabniku: </span>{{user_id.username}}</p>
        <p><span  class="gray_text">Dostopen od: </span>{{date_from1}}</p>
        <p><span  class="gray_text">Dostopen do: </span>{{date_to1}}</p>
        <a href="/packageAccess/delete/{{_id}}"  class="btn btn-primary btn-md " role="button" aria-pressed="true">Odstrani dostop</a>
        <hr>
    {{/each}}

</div>
