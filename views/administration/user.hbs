<div class="container">

    <h2>Dodaj uporabnika</h2>
    <form action="/users/administration/create" method="post">
         <div class="form-group" >
                <label for="email">Email</label>
                <input name="email" type="email" class="form-control" placeholder="Vnesite email">
              </div>
          <div class="form-group" >
            <label for="username">Uporabniško ime</label>
            <input name="username" type="text" class="form-control" placeholder="Vnesite uporabniško ime">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Geslo">
          </div>
           <div class="form-group">
              <input type="checkbox"  name="isAdmin">
              <label for="isAdmin" > administrator</label>
           </div>
          <input type="submit" class="btn btn-primary" value="Dodaj">
        </form>
</div>
<div class="container">
    <h2>Uporabniki</h2>
    <hr>
    {{#each users}}
        <p><span  class="gray_text">Ime:</span> {{username}}<br>
            <span class="gray_text">Email:</span> {{email}} <br>
            <span  class="gray_text">Je admin:</span> {{#if isAdmin}}DA {{else}} NE{{/if}}</p>
        <form action="/users/delete/{{_id}}" method="post">
            <input class="btn btn-primary btn-md " type="submit" value="Izbriši">
            <a href="/users/administration/edit/{{_id}}" class="btn btn-primary btn-md " role="button" aria-pressed="true">Uredi</a>
        </form>
        <hr>
    {{/each}}
</div>